{
    "name": "vite-ssr-ts-styled",
    "description": "Boilerplate Vite SSR with React Typescript and Styled Components",
    "private": false,
    "version": "1.0.0",
    "scripts": {
        "dev": "pnpm run server",
        "prod": "pnpm run build && pnpm run server:prod",
        "build": "tsc --noEmit && vite build",
        "server": "ts-node ./server/index.ts",
        "server:prod": "cross-env NODE_ENV=production ts-node ./server/index.ts",
        "lint:fix": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
        "lint:format": "prettier --loglevel warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" ",
        "lint": "pnpm lint:format && pnpm lint:fix ",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@swc/plugin-styled-components": "^1.5.49",
        "@types/compression": "^1.7.2",
        "@types/express": "^4.17.14",
        "@types/node": "^18.11.9",
        "@types/react": "^18.0.8",
        "@types/react-dom": "^18.0.3",
        "@vitejs/plugin-react": "^3.0.0",
        "@vitejs/plugin-react-swc": "^3.2.0",
        "compression": "^1.7.4",
        "concurrently": "7.6.0",
        "cross-env": "^7.0.3",
        "express": "^4.18.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-is": "^18.2.0",
        "sirv": "^2.0.2",
        "styled-components": "^5.3.9",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4",
        "vite": "^4.0.3",
        "vite-plugin-ssr": "^0.4.103"
    },
    "type": "module",
    "devDependencies": {
        "@types/styled-components": "^5.1.26",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-react": "^7.31.11",
        "eslint-plugin-react-hooks": "^4.6.0",
        "prettier": "^2.8.7"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "engines": {
        "npm": ">=6.4.1",
        "node": ">=10.13.0"
    },
    "eslintConfig": {
        "extends": "react-app"
    }
}
