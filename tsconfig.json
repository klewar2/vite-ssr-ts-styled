{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "outDir": "dist",
        "sourceMap": true,
        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "Node",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "types": ["vite/client"],
        "jsx": "react",
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "compilerOptions": {
            "module": "ES2020",
            "moduleResolution": "Node16"
        }
    }
}
